# Production Environment Variables Template
# Copy this file to .env.production and fill in actual values

# Database - Use your production database URL
DATABASE_URL="postgresql://username:password@host:5432/database"

# Supabase Configuration (if using Supabase)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# JWT - MUST use a strong secret in production
JWT_SECRET="your-super-strong-jwt-secret-at-least-32-characters"
JWT_EXPIRES_IN="7d"

# Stripe - Use your live keys for production
STRIPE_SECRET_KEY="sk_live_your_live_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_live_your_live_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_live_webhook_secret"

# Twilio - Use your production credentials
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your-live-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key"

# Email Configuration
EMAIL_FROM="noreply@yourdomain.com"
EMAIL_HOST="smtp.yourmailprovider.com"
EMAIL_PORT="587"
EMAIL_USER="your-email-username"
EMAIL_PASS="your-email-password"

# Server Configuration
PORT=3001
NODE_ENV="production"

# Frontend/Backend URLs - Update with your actual domains
FRONTEND_URL="https://your-frontend-domain.com"
REACT_APP_API_URL="https://your-backend-domain.com/api"

# Optional: Redis Configuration (if using external Redis)
# REDIS_URL="redis://your-redis-instance:6379"

# Optional: Sentry for error tracking
# SENTRY_DSN="https://your-sentry-dsn"

# Optional: Analytics
# GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"